<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%=post.title %>
    </div>
    <form class="ui form" action="/blogs/<%= post._id %>?_method=PUT" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=post.title%>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%=post.image%>">
        </div>
        <div class="field">
            <label>Post Body</label>
            <textarea name="blog[body]"><%=post.body%></textarea>
        </div>

        <input class="ui button basic blue" type="submit">
        <a class="ui secondary button" href="/">Back</a>
    </form>
</div>


<% include partials/footer %>res