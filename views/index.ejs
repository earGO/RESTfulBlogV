<% include partials/header %>
<main class="ui main text container">
    <div class="ui huge header">RESTful blog</div>
    <segment class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach(post => {%>
            <div class="item">
                <div class="image">
                    <img src="<%=post.image%>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= post._id%>"><%=post.title%></a>
                    <div class="meta">
                        <span><%= post.created.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p><%- post.body.substring(0,100)%></p>
                    </div>
                    <div class="extra">
                        <a href="/blogs/<%= post._id%>"
                           class="ui floated basic violet button">
                            Read more
                            <i class="right shevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <%})%>
        </div>
    </segment>
</main>


<% include partials/footer %>