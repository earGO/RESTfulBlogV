<% include partials/header %>


    <main class="ui main text container segment">
        <div class="ui huge header">
            <h1><%= post.title%></h1>
        </div>
        <section class="ui top attached segment">
            <div class="item">
                <img class="ui centered rounded image" src="<%= post.image%>">
                <div class="content">
                    <span>Created on <%= post.created.toDateString()%></span>
                </div>
                <div class="description">
                    <p><%- post.body%></p>
                </div>
            </div>
            <form action="/blogs/<%= post._id%>?_method=DELETE" method="post">
                <a href="/blogs/<%= post._id%>/edit" class="ui button" tabindex="0">Edit post</a>
                <a class="ui button postButton" href="/">Get back</a>
                <button class="ui red basic button" type="submit">DELETE POST</button>
            </form>

        </section>

    </main>



<% include partials/footer %>